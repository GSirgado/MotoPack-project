@{
    ViewBag.Title = "Registar";
}
<style>
    * {
        box-sizing: border-box;
    }

    .container {
        width: 90%;
        max-width: 900px;
        margin: 50px auto;
        padding: 30px;
        background-color: #d3d3d3;
        border-radius: 20px;
        display: flex;
        gap: 20px;
        overflow: hidden;
    }

    .welcome-section {
        flex: 1;
        font-family: Arial, sans-serif;
    }

        .welcome-section h2 {
            font-weight: bold;
        }

    .divider {
        width: 1px;
        background-color: black;
    }

    .form-section {
        flex: 1;
    }

        .form-section form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .form-section input[type="text"],
        .form-section input[type="email"],
        .form-section input[type="password"] {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 20px;
        }

    .form-buttons {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

        .form-buttons input {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 20px;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }

    .submit-btn {
        background-color: #4CAF50;
    }

    .reset-btn {
        background-color: #f44336;
    }

    .login-btn {
        padding: 10px;
        background-color: #ccc;
        border: none;
        border-radius: 20px;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
    }

    .background-note {
        text-align: center;
        font-style: italic;
        margin-top: 10px;
    }
</style>

<div class="container">
    <div class="welcome-section">
        <h2>Bem-vindo(a)</h2>
        <p>Leve descrição do funcionamento do site e saudações de boas vindas</p>
    </div>

    <div class="divider"></div>

    <div class="form-section">
        <form method="post" asp-controller="Conta" asp-action="Registar">
            @Html.AntiForgeryToken()

            @if (ViewBag.Erro != null)
            {
                <div style="color:red; font-weight:bold;">@ViewBag.Erro</div>
            }

            <input type="text" name="Nome" placeholder="Nome" required />
            <input type="email" name="Email" placeholder="Email" required />
            <input type="password" name="Pass" placeholder="Pass" required />
            <input type="password" name="ConfPass" placeholder="Confirmação de Pass" required />

            <div class="form-buttons">
                <input type="submit" class="submit-btn" value="Submeter" />
                <input type="reset" class="reset-btn" value="Apagar" />
            </div>

            <button type="button" class="login-btn" onclick="location.href='@Url.Action("Login", "Conta")'">
                Já tenho conta!
            </button>

            <div class="mt-3">
                <a asp-action="Login" asp-controller="Conta">Já tenho conta!</a>
            </div>
        </form>
    </div>
</div>
