@model MotoPack_project.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h2>Editar Produto</h2>

<!-- Formulário para editar produto existente -->
<form asp-action="EditarProduto" method="post" enctype="multipart/form-data">
    <!-- ID oculto para manter referência ao produto -->
    <input type="hidden" asp-for="Id" />

    <!-- Campo para editar o nome do produto -->
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <!-- Campo para editar o preço -->
    <div class="mb-3">
        <label asp-for="Preco" class="form-label"></label>
        <input asp-for="Preco" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <!-- Lista de categorias fixas -->
    <div class="mb-3">
        <label asp-for="Categoria" class="form-label"></label>
        <select asp-for="Categoria" class="form-control">
            <option value="">-- Selecione uma categoria --</option>
            <option>Eletricidade e Iluminação</option>
            <option>Carroçaria</option>
            <option>Travões</option>
            <option>Filtros</option>
            <option>Suspensão</option>
            <option>Motor</option>
            <option>Escapamento</option>
            <option>Sistema de combustível</option>
            <option>Sistema de Refrigeração</option>
            <option>Sistema de transmissão</option>
            <option>Fluidos ou Químicos</option>
            <option>Rodas</option>
        </select>
        <span asp-validation-for="Categoria" class="text-danger"></span>
    </div>

    <!-- Campo para editar descrição do produto -->
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <!-- Exibição da imagem atual, se existir -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <label>Imagem Atual</label><br />
            <img src="@Model.ImageUrl" alt="Imagem atual" style="max-height: 150px;" />
        </div>
    }

    <!-- Upload de nova imagem -->
    <div class="mb-3">
        <label asp-for="Imagem" class="form-label">Nova Imagem</label>
        <input asp-for="Imagem" type="file" class="form-control" />
        <span asp-validation-for="Imagem" class="text-danger"></span>
    </div>

    <!-- Botões de submissão e cancelamento -->
    <button type="submit" class="btn btn-primary">Guardar Alterações</button>
    <a asp-action="Perfil" class="btn btn-secondary">Cancelar</a>
</form>
