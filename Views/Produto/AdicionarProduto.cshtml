@model MotoPack_project.Models.Produto // Define o modelo da página

@{
    ViewData["Title"] = "Adicionar Produto"; // Define o título da aba/página
}

<div class="container my-5">
    <h2 class="mb-4">Adicionar Novo Produto</h2>

    <!-- Formulário para adicionar produto -->
    <form asp-action="AdicionarProduto" asp-controller="Produto" method="post" enctype="multipart/form-data">
        <!-- Campo Nome do Produto -->
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome do Produto</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <!-- Campo Preço -->
        <div class="mb-3">
            <label asp-for="Preco" class="form-label">Preço (€)</label>
            <input asp-for="Preco" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>

        <!-- Campo Categoria com opções fixas -->
        <div class="mb-3">
            <label asp-for="Categoria" class="form-label">Categoria</label>
            <select asp-for="Categoria" class="form-control">
                <option value="">-- Selecione uma categoria --</option>
                <option>Eletricidade e Iluminação</option>
                <option>Carroçaria</option>
                <option>Travões</option>
                <option>Filtros</option>
                <option>Suspensão</option>
                <option>Motor</option>
                <option>Escapamento</option>
                <option>Sistema de combustível</option>
                <option>Sistema de Refrigeração</option>
                <option>Sistema de transmissão</option>
                <option>Fluidos ou Químicos</option>
                <option>Rodas</option>
            </select>
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>

        <!-- Campo Descrição -->
        <div class="mb-3">
            <label asp-for="Descricao" class="form-label">Descrição do Produto</label>
            <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <!-- Campo Upload de Imagem -->
        <div class="mb-3">
            <label asp-for="Imagem" class="form-label">Imagens do Produto</label>
            <input asp-for="Imagem" type="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Adicionar Produto</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); // Carrega validação do lado do cliente
    }
}
