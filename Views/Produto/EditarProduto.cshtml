@model MotoPack_project.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container my-5">
    <h2 class="mb-4">Editar Produto</h2>

    <!-- Formulário de edição do produto -->
    <form asp-action="EditarProduto" asp-controller="Home" method="post" enctype="multipart/form-data">
        <!-- Campo oculto com o ID do produto -->
        <input type="hidden" asp-for="Id" />

        <!-- Nome do Produto -->
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome do Produto</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <!-- Preço -->
        <div class="mb-3">
            <label asp-for="Preco" class="form-label">Preço (€)</label>
            <input asp-for="Preco" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>

        <!-- Categoria (lista fixa) -->
        <div class="mb-3">
            <label asp-for="Categoria" class="form-label">Categoria</label>
            <select asp-for="Categoria" class="form-control">
                <option value="">-- Selecione uma categoria --</option>
                <option>Eletricidade e Iluminação</option>
                <option>Carroçaria</option>
                <option>Travões</option>
                <option>Filtros</option>
                <option>Suspensão</option>
                <option>Motor</option>
                <option>Escapamento</option>
                <option>Sistema de combustível</option>
                <option>Sistema de Refrigeração</option>
                <option>Sistema de transmissão</option>
                <option>Fluidos ou Químicos</option>
                <option>Rodas</option>
            </select>
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>

        <!-- Descrição -->
        <div class="mb-3">
            <label asp-for="Descricao" class="form-label">Descrição do Produto</label>
            <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <!-- Imagem atual (exibe apenas uma, se existir) -->
        <div class="mb-3">
            <label class="form-label">Imagens atuais</label><br />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" alt="Imagem produto" style="height: 100px; margin: 5px;" />
            }
            else
            {
                <p><em>Sem imagem adicionada</em></p>
            }
        </div>

        <!-- Upload de novas imagens -->
        <div class="mb-3">
            <label class="form-label">Adicionar Novas Imagens (até 10 no total)</label>
            <input name="Imagens" class="form-control" type="file" multiple />
        </div>

        <button type="submit" class="btn btn-primary">Guardar Alterações</button>
    </form>
</div>
