@{
    ViewData["Title"] = "Categorias";

    // Lista de categorias disponíveis
    var categorias = new List<string>
    {
        "Eletricidade e Iluminação",
        "Quadro",
        "Travões",
        "Filtros",
        "Suspensão",
        "Motor",
        "Escapamento",
        "Sistema de Combustível",
        "Sistema de Refrigeração",
        "Sistema de Transmissão",
        "Fluidos ou Químicos",
        "Rodas"
    };

    // Mapeia cada categoria à sua imagem correspondente
    var imagens = new Dictionary<string, string>
    {
        { "Eletricidade e Iluminação", "eletricidade.png" },
        { "Quadro", "quadro.jpg" },
        { "Travões", "travoes.png" },
        { "Filtros", "filtros.png" },
        { "Suspensão", "suspensao.png" },
        { "Motor", "motor.png" },
        { "Escapamento", "escape.png" },
        { "Sistema de Combustível", "combustivel.png" },
        { "Sistema de Refrigeração", "refrigeracao.png" },
        { "Sistema de Transmissão", "transmissao.png" },
        { "Fluidos ou Químicos", "fluidos.png" },
        { "Rodas", "rodas.png" }
    };

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/categorias_style.css" />

<div class="container my-5">
    <div class="row g-4">
        @foreach (var categoria in categorias)
        {
            var imagem = imagens[categoria]; // Recupera imagem da categoria
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <a href="@Url.Action("Catalogo", "Produto", new { categoria = categoria })" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content($"~/imagens/{imagem}")" alt="@categoria" class="card-img-top img-fluid" style="height: 120px; object-fit: cover;" />
                        <div class="card-body p-2">
                            <p class="card-text text-center fw-semibold">@categoria</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
