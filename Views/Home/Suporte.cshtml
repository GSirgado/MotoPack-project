@{
    ViewData["Title"] = "Pedido de Ajuda";
}

<main class="container mt-5">

    <div class="text-center mb-4">
        <h3 class="bg-light d-inline-block px-4 py-2 rounded-pill fw-bold">Pedido de ajuda</h3>
    </div>

    <form asp-action="EnviarPedido" method="post" class="w-75 mx-auto">
        <div class="mb-3">
            <label class="form-label">Nome:</label>
            <input class="form-control rounded-pill px-3" />
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input class="form-control rounded-pill px-3" />
            <span class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Descreva o seu pedido de ajuda</label>
            <textarea class="form-control rounded p-3" rows="5"></textarea>
            <span  class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-3">
            <a asp-action="Index" class="btn btn-danger px-4">Voltar</a>
            <button type="submit" class="btn btn-success px-4">Enviar</button>
        </div>
    </form>
</main>
