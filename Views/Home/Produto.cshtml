@{
    ViewData["Title"] = "Produto";
}

<main class="container mt-5">

    <!-- Nome do Produto -->
    <h2 class="text-center mb-4"></h2>

    <div class="row">
        <!-- Descrição -->
        <div class="col-md-6">
            <div class="p-4 bg-light rounded">
                <h5>Descrição do produto</h5>
                <p></p>
            </div>
        </div>

        <!-- Imagens -->
        <div class="col-md-6 text-center">
            <div class="position-relative">
                <button class="btn btn-link position-absolute top-50 start-0">❮</button>

                <img src="" class="img-fluid rounded" style="max-height: 250px;" alt="Imagem da peça" />

                <button class="btn btn-link position-absolute top-50 end-0">❯</button>
            </div>

            <div class="d-flex justify-content-center gap-2 mt-3">
                <img src="" class="img-thumbnail" width="80" alt="Thumb 1" />
                <img src="" class="img-thumbnail" width="80" alt="Thumb 2" />
                <img src="" class="img-thumbnail" width="80" alt="Thumb 3" />
            </div>

            <div class="mt-4 d-flex align-items-center justify-content-between">
                <span class="fw-bold fs-5">Preço: </span>
                <form asp-action="AdicionarAoCarrinho" method="post">
                    <input type="hidden" name="id" value="" />
                    <button class="btn btn-success px-4">Adicionar ao carrinho</button>
                </form>
            </div>
        </div>
    </div>
</main>
