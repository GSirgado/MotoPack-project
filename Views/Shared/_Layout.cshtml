<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MotoPack</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header class="bg-dark">
        <div class="nav text-white py-1 px-3 d-flex justify-content-between align-items-center">
            <div>
                <a href="@Url.Action("Index","Home")">
                    <img class="btn" src="/imagens/logo.png" height="70" />
                </a>
            </div>

            <div class="d-flex flex-grow-1 justify-content-center align-items-center mx-3">
                <input type="text" class="form-control w-50" placeholder="Barra de pesquisa de produtos" />
                <button class="btn btn-light ms-2">🔍</button>
            </div>

            <div class="d-flex align-items-center gap-3">
                <a href="@Url.Action("Catalogo","Home")" class="btn btn-light">🛒</a>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a href="@Url.Action("Perfil", "Conta")">
                        <img src="/imagens/perfil_default.png" height="50" />
                    </a>
                    <form method="post" asp-action="Logout" asp-controller="Home" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a href="@Url.Action("Registar","Conta")">
                        <img src="/imagens/perfil_default.png" height="50" />
                    </a>
                }
            </div>
        </div>

        <div class="d-flex justify-content-center gap-4 py-1">
            <a href="@Url.Action("Catalogo","Home")" class="btn btn-outline-secondary rounded-pill">Catálogo</a>
            <a href="@Url.Action("Categorias","Home")" class="btn btn-outline-secondary rounded-pill">Categorias</a>
            <a href="@Url.Action("Suporte","Home")" class="btn btn-outline-secondary rounded-pill">Suporte</a>
        </div>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-white bg-dark p-3 d-flex justify-content-around">
        <div>Patrocínios e responsáveis</div>
        <div>|</div>
        <div>Formas de contato</div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
