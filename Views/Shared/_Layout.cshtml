@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NomeDoSite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header class="bg-dark">
        <div class="nav text-white py-1 px-3 d-flex justify-content-between align-items-center">
            <div>
                <a href="@Url.Action("Index","Home")"><img class="btn" src="/imagens/logo.png" height="70" /></a>
            </div>
            <div class="d-flex flex-grow-1 justify-content-center align-items-center mx-3">
                <input type="text" class="form-control w-50" placeholder="Barra de pesquisa de produtos" />
                <button class="btn btn-light ms-2">🔍</button>
            </div>
            <div>
                <button class="btn btn-light">🛒</button>
                <a href="@Url.Action("Perfil","Home")"><img src="/imagens/perfil_default.png" height="70" /></a>
            </div>
        </div>
        
        <div class="d-flex justify-content-center gap-4 py-1">
            <a href="@Url.Action("Catalogo","Home")" class="btn btn-outline-secondary rounded-pill"> Catálogo </a>
            <a href="@Url.Action("Categorias","Home")" class="btn btnbtn-outline-secondary rounded-pill"> Categorias </a>
            <a href="@Url.Action("Suporte","Home")" class="btn btn-outline-secondary rounded-pill">Suporte</a>
        </div>
    </header>

    

    @RenderBody()

    <footer class="text-white bg-dark p-3 d-flex justify-content-around">
        <div>Patrocínios e responsáveis</div>
        <div>|</div>
        <div>Formas de contacto</div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
