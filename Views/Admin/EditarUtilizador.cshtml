@model MotoPack_project.ViewModels.EditarUtilizadorViewModel

@{
    ViewData["Title"] = "Editar Utilizador"; // Define o título da página
}

<div class="container my-5">
    <h2 class="mb-4">Editar Utilizador</h2>

    <!-- Formulário para editar os dados do utilizador -->
    <form asp-action="EditarUtilizador" method="post">
        <input type="hidden" asp-for="Id" /> <!-- Campo oculto com o ID do utilizador -->

        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3 d-flex align-items-center justify-content-between">
            <div class="flex-grow-1 me-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <!-- Botões de ação -->
        <button type="submit" class="btn btn-primary">Guardar Alterações</button>
        <a asp-action="GerirUtilizadores" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
