@model MotoPack_project.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container my-5">
    <h2 class="mb-4">Editar Produto</h2>

    <form asp-action="EditarProduto" asp-controller="Admin" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome do Produto</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Preco" class="form-label">Preço (€)</label>
            <input asp-for="Preco" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Categoria" class="form-label">Categoria</label>
            <select asp-for="Categoria" class="form-control">
                <option value="">-- Selecione uma categoria --</option>
                <option>Eletricidade e Iluminação</option>
                <option>Carroçaria</option>
                <option>Travões</option>
                <option>Filtros</option>
                <option>Suspensão</option>
                <option>Motor</option>
                <option>Escapamento</option>
                <option>Sistema de combustível</option>
                <option>Sistema de Refrigeração</option>
                <option>Sistema de transmissão</option>
                <option>Fluidos ou Químicos</option>
                <option>Rodas</option>
            </select>
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Imagem Atual</label><br />
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Imagem atual" style="height: 100px;" />
            }
            else
            {
                <p><em>Sem imagem adicionada</em></p>
            }
        </div>

        <div class="mb-3">
            <label asp-for="Imagem" class="form-label">Nova Imagem</label>
            <input asp-for="Imagem" class="form-control" type="file" />
            <span asp-validation-for="Imagem" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar Alterações</button>
        <a asp-action="GerirUtilizadores" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>