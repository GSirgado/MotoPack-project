@model MotoPack_project.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h2>Editar Produto</h2>

<form asp-action="EditarProduto" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label class="form-label">Categoria</label>
        <input asp-for="Categoria" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Imagem (opcional)</label>
        <input asp-for="Imagem" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>
